@model CarCaseProject.Entities.Car

@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">

                <div class="card">
                    <div class="card-header">
                        <br />
                        <h5>Yeni Araç Girişi</h5>
                        <span>Araç ile ilgili verileri eksiksiz olarak doldurunuz!</span>
                    </div>
                    <div class="card-block">
                        <form method="post">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Araç Adı</label>
                                <div class="col-sm-10">
                                    <input type="text" name="CarName" class="form-control">
                                </div>
                            </div>
                            <br />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Araç Plakası</label>
                                <div class="col-sm-10">
                                    <input type="text" name="LicensePlate" class="form-control">
                                </div>
                            </div>
                            <br />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Aktif Çalışma Süresi</label>
                                <div class="col-sm-10">
                                    <input type="text" name="ActiveWorkingTime" class="form-control">
                                </div>
                            </div>
                            <br />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Bakım Süresi</label>
                                <div class="col-sm-10">
                                    <input type="text" name="MaintenanceTime" class="form-control">
                                </div>
                            </div>
                            <br />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Boşta Bekleme Süresi</label>
                                <div class="col-sm-10">
                                    <input type="text" name="IdleTime" class="form-control">
                                </div>
                            </div>
                            <br />
                            <button class="btn btn-primary">Aracı Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>